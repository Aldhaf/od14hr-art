<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_shift_roster_reject_wizard_view_form" model="ir.ui.view">
            <field name="name">hr.shift.roster.reject.wizard.form</field>
            <field name="model">hr.shift.roster.reject.wizard</field>
            <field name="arch" type="xml">
                <form string="Alasan Penolakan">
                    <group>
                        <field name="reason" nolabel="1" placeholder="Tuliskan alasan penolakan di sini..."/>
                    </group>
                    <footer>
                        <button name="action_confirm_reject" string="Konfirmasi Tolak" type="object" class="oe_highlight" data-hotkey="q"/>
                        <button string="Batal" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_hr_shift_roster_reject_wizard" model="ir.actions.act_window">
            <field name="name">Alasan Penolakan</field>
            <field name="res_model">hr.shift.roster.reject.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hr_shift_roster_reject_wizard_view_form"/>
            <field name="target">new</field> </record>

    </data>
</odoo>