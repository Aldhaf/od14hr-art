<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_shift_roster_view_tree" model="ir.ui.view">
            <field name="name">hr.shift.roster.tree</field>
            <field name="model">hr.shift.roster</field>
            <field name="arch" type="xml">
                <tree string="Shift Roster" decoration-info="state == 'requested'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'" decoration-muted="state == 'draft'">
                    <field name="employee_id"/>
                    <field name="date"/>
                    <field name="work_pattern_id"/>
                    <field name="state"/>
                    <field name="approver_id" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="hr_shift_roster_view_form" model="ir.ui.view">
            <field name="name">hr.shift.roster.form</field>
            <field name="model">hr.shift.roster</field>
            <field name="arch" type="xml">
                <form string="Shift Roster">
                    <header>
                        <button name="action_approve" string="Approve" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'requested')]}"/>
                        <button name="action_reject" string="Reject" type="object" attrs="{'invisible': [('state', '!=', 'requested')]}"/>
                        <button name="action_reset_to_draft" string="Reset to Draft" type="object" attrs="{'invisible': [('state', 'not in', ['approved', 'rejected'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,requested,approved"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="date"/>
                                <field name="work_pattern_id"/>
                            </group>
                            <group>
                                <field name="approver_id"/>
                                <field name="rejection_reason" attrs="{'invisible': [('state', '!=', 'rejected')]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_shift_roster_view_search" model="ir.ui.view">
            <field name="name">hr.shift.roster.search</field>
            <field name="model">hr.shift.roster</field>
            <field name="arch" type="xml">
                <search string="Search Shift Roster">
                    <field name="employee_id"/>
                    <filter string="Requested" name="filter_requested" domain="[('state', '=', 'requested')]"/>
                    <filter string="Approved" name="filter_approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="My Team" name="my_team" domain="[('employee_id.parent_id.user_id', '=', uid)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Employee" name="group_by_employee" context="{'group_by': 'employee_id'}"/>
                        <filter string="Status" name="group_by_status" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="hr_shift_roster_action" model="ir.actions.act_window">
            <field name="name">Shift Roster Management</field>
            <field name="res_model">hr.shift.roster</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_filter_requested': 1}</field> <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No shift requests found.
                </p>
            </field>
        </record>

        <menuitem
            id="menu_hr_shift_roster_management"
            name="Shift Management"
            parent="hr.menu_hr_root"
            action="hr_shift_roster_action"
            sequence="20"/>

    </data>
</odoo>