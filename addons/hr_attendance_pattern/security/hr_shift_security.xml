<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="module_category_hr_shift_management" model="ir.module.category">
            <field name="name">Shift Management</field>
            <field name="description">Helps you manage employee shift rostering.</field>
            <field name="sequence">20</field>
        </record>

        <record id="group_hr_shift_supervisor" model="res.groups">
            <field name="name">Supervisor</field>
            <field name="category_id" ref="module_category_hr_shift_management"/>
            <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>

        <record id="hr_shift_roster_supervisor_rule" model="ir.rule">
            <field name="name">Shift Roster: Supervisor can only see their team</field>
            <field name="model_id" ref="model_hr_shift_roster"/>
            <field name="domain_force">[('employee_id.parent_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_hr_shift_supervisor'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>